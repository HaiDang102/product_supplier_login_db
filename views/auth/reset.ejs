<%- include('../partials/header') %>

    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow">
                <div class="card-body">
                    <h3 class="card-title mb-3 text-center">Reset Password</h3>

                    <!-- Thông báo lỗi -->
                    <% if (error) { %>
                        <div class="alert alert-danger">
                            <%= error %>
                        </div>
                        <% } %>

                            <!-- Thông báo thành công -->
                            <% if (success) { %>
                                <div class="alert alert-success">
                                    <%= success %>
                                </div>
                                <% } %>

                                    <!-- Nếu token không hợp lệ, disable form -->
                                    <% if (token) { %>
                                        <form action="/auth/reset/<%= token %>" method="POST">
                                            <div class="mb-3">
                                                <label class="form-label">New Password</label>
                                                <input type="password" name="password" class="form-control" required>
                                            </div>
                                            <button class="btn btn-primary w-100">Reset Password</button>
                                        </form>
                                        <% } else { %>
                                            <p class="text-center">Token không hợp lệ hoặc đã hết hạn.</p>
                                            <p class="text-center"><a href="/auth/forgot">Gửi lại email reset</a></p>
                                            <% } %>

                                                <p class="mt-3 text-center">
                                                    <a href="/auth/login">Back to Login</a>
                                                </p>
                </div>
            </div>
        </div>
    </div>

    <%- include('../partials/footer') %>