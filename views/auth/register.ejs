<%- include('../partials/header') %>

    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow">
                <div class="card-body">
                    <h3 class="card-title mb-3 text-center">Register</h3>

                    <!-- Thông báo lỗi -->
                    <% if (error) { %>
                        <div class="alert alert-danger">
                            <%= error %>
                        </div>
                        <% } %>

                            <form action="/auth/register" method="POST">
                                <div class="mb-3">
                                    <label class="form-label">Username</label>
                                    <input type="text" name="username" class="form-control" required value="<%= username ? username : '' %>">
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Email</label>
                                    <input type="email" name="email" class="form-control" required value="<%= email ? email : '' %>">
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Phone</label>
                                    <input type="text" name="phone" class="form-control" value="<%= phone ? phone : '' %>">
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Password</label>
                                    <input type="password" name="password" class="form-control" required>
                                </div>
                                <button class="btn btn-success w-100">Register</button>
                            </form>

                            <p class="mt-3 text-center">
                                <a href="/auth/login">Already have an account? Login</a>
                            </p>
                </div>
            </div>
        </div>
    </div>

    <%- include('../partials/footer') %>