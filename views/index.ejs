<%- include('partials/header') %>

    <div class="container mt-5">
        <div class="text-center mb-4">
            <h1 class="display-5">Danh sách sản phẩm</h1>
            <p class="text-muted">Tìm kiếm và lọc sản phẩm theo nhà cung cấp</p>
        </div>

        <!-- Form tìm kiếm -->
        <form method="GET" action="/" class="row g-3 mb-4">
            <div class="col-md-4">
                <select name="supplierId" class="form-select">
                <option value="">-- Chọn nhà cung cấp --</option>
                <% suppliers.forEach(s => { %>
                    <option value="<%= s._id %>" <%= (typeof selectedSupplier !== 'undefined' && selectedSupplier == s._id) ? 'selected' : '' %>><%= s.name %></option>
                <% }) %>
            </select>
            </div>
            <div class="col-md-6">
                <input type="text" name="search" value="<%= search %>" class="form-control" placeholder="Tìm theo tên sản phẩm...">
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100">Tìm kiếm</button>
            </div>
        </form>

        <!-- Bảng sản phẩm -->
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover align-middle">
                <thead class="table-dark text-center">
                    <tr>
                        <th>#</th>
                        <th>Tên sản phẩm</th>
                        <th>Giá</th>
                        <th>Số lượng</th>
                        <th>Nhà cung cấp</th>
                    </tr>
                </thead>
                <tbody>
                    <% products.forEach((p, index) => { %>
                        <tr class="text-center">
                            <td>
                                <%= index + 1 %>
                            </td>
                            <td class="text-start">
                                <%= p.name %>
                            </td>
                            <td>
                                <%= p.price.toLocaleString() %> ₫</td>
                            <td>
                                <%= p.quantity %>
                            </td>
                            <td>
                                <%= p.supplierId ? p.supplierId.name : 'N/A' %>
                            </td>
                        </tr>
                        <% }) %>
                            <% if(products.length === 0){ %>
                                <tr>
                                    <td colspan="5" class="text-center text-muted">Không có sản phẩm nào</td>
                                </tr>
                                <% } %>
                </tbody>
            </table>
        </div>
    </div>

    <%- include('partials/footer') %>